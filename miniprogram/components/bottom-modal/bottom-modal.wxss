.coverlay{
  height: 100%;
  overflow: hidden;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99;
  text-align: center;
  background-color: rgba(0, 0, 0, .6);
  
}
.bottom-modal-penal{
  position: absolute;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  height: 300rpx;
  background-color: #f8f8f8;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.coverlay .icon-searchclose{
  position: absolute;
  right: 1rpx;
  top: 1rpx;
  font-size: 70rpx;
  padding: 20rpx;/*增加触控面积*/
}
.icon-color{
  color: #ff6633;
}